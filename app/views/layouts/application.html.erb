<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="<%= posts_path %>">All Posts</a>
          </li>
        </ul>
          <ul class="navbar-nav navbar-right">
            <% if current_author %>
              Logged in as <%= current_author.email %>.
              <li class="nav-item">
                <a class="nav-link" href="<%= new_post_path %>">Create new Post</a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="<%= logout_path %>">Log Out</a>
              </li>
            <% else %>
              <li class="nav-item">
              <a class="nav-link" href="<%= signup_path %>">Sign Up</a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="<%= login_path %>">Log In</a>
              </li>
            <% end %>
          </ul>
      </nav>
    </div>

    <div class="container main">
      <%= yield %>
    </div>
  </body>
</html>

