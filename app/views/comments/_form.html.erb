<% @comment ||= @post.comments.create%>
<%= form_with model: [ @post, @comment ] do |f| %>
  <p>
  <div class='field'>
    <%= f.select(:author_id, Author.all.collect {|a| [ a.full_name, a.id ] }, {}, {:class => "select_author"}) %>
  </div>
  </p>
  <p>
    <%= f.label :body, "Comment here:" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
  <div class="actions">
    <%= f.submit%>
  </div>
  </p>
<% end %>